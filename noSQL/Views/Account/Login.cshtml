@model noSQL.Models.AccountModel

@if(ViewBag.Message != "")
{
    <h2 style="color:red">@ViewBag.Message</h2>
}
<h2>Zaloguj się</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SubmitLogin" method="post">
            <div>
                <div>
                    <label asp-for=Login>Login</label>
                    <input asp-for=Login />
                </div>
                <div>
                    <label asp-for=Password>Hasło</label>
                    <input type="password" asp-for=Password />
                </div>
            </div>

            <div>
                <input type="submit" value="Zaloguj" />
            </div>
        </form>
    </div>
</div>


